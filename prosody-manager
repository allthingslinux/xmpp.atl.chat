# Command-specific help functions
show_command_help() {
    local command="$1"

    case "$command" in
        "prosodyctl")
            show_prosodyctl_help
            ;;
        "deploy")
            show_deploy_help
            ;;
        "module")
            module_help
            ;;
        "cert")
            show_cert_help
            ;;
        "backup")
            show_backup_help
            ;;
        "health")
            show_health_help
            ;;
        *)
            show_general_help
            ;;
    esac
}

